{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Document list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Datedocument</th>
                <th>Image</th>
                <th>Image Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_document_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.dateDocument %}{{ entity.dateDocument|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><img src="{{ (entity.image.path  ~ entity.image.name) | imagine_filter('my_thumb') }}" /></td>

                <td>{{ entity.image.id }}</td>
                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_document_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_document_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_document_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
