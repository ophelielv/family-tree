{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Image list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Alt</th>
                <th>Path</th>
                <th>Let's see</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_image_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.alt }}</td>
                <td>{{ entity.path }}</td>
                <td><img src="{{ (entity.path  ~ entity.name) | imagine_filter('my_thumb') }}" /></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_image_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_image_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_image_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
