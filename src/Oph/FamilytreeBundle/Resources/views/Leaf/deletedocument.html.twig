{# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

{% extends "OphFamilytreeBundle::layout-leaf.html.twig" %}

{% block title %}
  Documents - {{ parent() }}
{% endblock %}

{% block ophfamilytree_body %}

    <div class="container">
        <div class="row-fluid">
            <h3>Supprimer le document ?</h3>
            <p><strong>{{ document.title }} </strong></p>
            <img src="{{ (document.img.webPath) | imagine_filter('my_thumb') }}" alt="{{document.img.alt}}"/>
            
            <form action="{{ path('oph_familytree_delete_document', {'id': person.id, 'idDocument': document.id}) }}" method="post">
            
            <p>
               <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
            </p>
            {# Ceci va générer le champ CSRF #}
            {{ form_rest(form) }}
            </form>
            
            
        </div><!--end row-fluid-->
    </div><!--end container-->
    <hr>

<div class="container text-center">
       <p> <a href="{{ path('oph_familytree_view', {'id': person.id}) }}" class="btn btn-success" role="button"><i class="glyphicon glyphicon-chevron-left"></i> Retour à la fiche</a></p>
</div>


{% endblock %}